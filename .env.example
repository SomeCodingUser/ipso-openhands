# OpenHands Environment Variables
# Copy this file to .env and update the values

# Required: Secret key for encrypting sensitive data
# Generate a new one with: python -c "import secrets; print(secrets.token_hex(32))"
OH_SECRET_KEY=your_random_64_char_hex_string_here

# Optional: Runtime configuration (worktree = no docker needed)
RUNTIME=worktree

# Optional: Backend configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=3000

# Optional: GitHub token for repository access
# GITHUB_TOKEN=your_token_here
